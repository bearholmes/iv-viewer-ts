{
  "name": "iv-viewer-ts",
  "version": "2.2.0",
  "description": "A zooming and panning plugin inspired by google photos for your web images.",
  "main": "dist/iv-viewer-ts.js",
  "module": "dist/iv-viewer-ts.mjs",
  "umd:main": "dist/iv-viewer-ts.umd.js",
  "browser": "dist/iv-viewer-ts.umd.js",
  "typings": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bearholmes/iv-viewer-ts.git"
  },
  "keywords": [
    "image",
    "zooming",
    "panning",
    "google",
    "photos"
  ],
  "author": "bearholmes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bearholmes/iv-viewer-ts/issues"
  },
  "homepage": "https://github.com/bearholmes/iv-viewer-ts#readme",
  "scripts": {
    "build": "vite build  && tsc",
    "build-cjs": "rollup -c",
    "build-css": "node build-css.cjs",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "security:audit": "npm audit --production",
    "security:audit:dev": "npm audit",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npx npm-check-updates",
    "deps:update:patch": "npx npm-check-updates -u --target patch",
    "deps:update:minor": "npx npm-check-updates -u --target minor"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^9.17.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "rollup": "^4.28.1",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.83.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^4.0.13"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ]
}
